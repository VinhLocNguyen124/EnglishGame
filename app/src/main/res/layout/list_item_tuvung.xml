<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="0dp"
    android:background="#00FFFFFF"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgLITV"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/jump" />

        <androidx.cardview.widget.CardView
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="10dp"
            android:elevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_opacity_right">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_opacity_top">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvTiengAnhLITV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hello"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:textSize="20sp"
                        android:textColor="#03A9F4"/>

                    <TextView
                        android:id="@+id/tvTiengVietLITV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="#03A9F4"
                        android:text="Xin chào"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="240dp"
                    android:layout_height="30dp"
                    android:id="@+id/layoutRoot"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="0dp"
                   android:layout_centerHorizontal="true"
                   android:layout_below="@+id/linear"
                    android:background="@drawable/bg_red_parent_layout">

                    <RelativeLayout
                        android:id="@+id/layoutMove"
                        android:background="@drawable/bg_red_child_layout"
                        android:layout_width="130dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_centerVertical="true"
                        android:layout_height="match_parent"/>

                    <ImageView
                        android:src="@drawable/button"
                        android:layout_width="20dp"
                        android:layout_centerInParent="true"
                        android:layout_height="20dp">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tiếng Việt"
                        android:textSize="14sp"
                        android:textColor="#fff"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tiếng Anh"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_centerVertical="true"
                        android:textStyle="bold"/>
                    <RelativeLayout
                        android:id="@+id/layoutCatchEvent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/lineCatManHinh"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/layoutRoot"
                    android:background="#AAA5A5"/>
                <ImageView
                    android:id="@+id/imgSoundLITV"
                    android:layout_width="40dp"
                    android:layout_below="@+id/lineCatManHinh"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/ic_speaker"
                    android:layout_alignParentRight="true"
                   />
                <ImageView
                    android:id="@+id/imgTuQuanTrongLITV"
                    android:layout_width="40dp"
                    android:layout_below="@+id/lineCatManHinh"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/ic_gray_star"
                   android:layout_toLeftOf="@+id/imgSoundLITV"
                    />
                <ImageView
                    android:id="@+id/imgActiveLITV"
                    android:layout_width="40dp"
                    android:layout_below="@+id/lineCatManHinh"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/btnred"
                    android:layout_toLeftOf="@+id/imgTuQuanTrongLITV"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>